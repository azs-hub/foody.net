<div class="row">
    <div class="col-xs-12">
        <h2>Add Recipe</h2>

        <form id="signin" method="post" asp-controller="Recipes" asp-action="CreateRecipe">
            <input type="hidden" name="id" value="" />

            <div class="form-group">
                <label>Name</label>
                <input type="text" name="Name" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label>Ingredient</label>
                <textarea name="Ingredient" class="form-control"></textarea>

            </div>
            <div class="form-group">
                <label>cooking</label>
                <textarea name="cooking" class="form-control"></textarea>

            </div>
            <div class="form-group">
                <label>Time</label>
                <input type="number" class="form-control" name="Time" value="" />
            </div>
            <button type="submit" class="btn btn-default">Add recipe</button>
        </form>
     </div>
</div>

