<div class="row">
    <div class="col-xs-12">
        <h2>All recipes</h2>
        <ul>
            @foreach (var recipe in Model.Recipes)
            {
                <li><a asp-action="RecipeDetail" asp-route-id="@recipe.Id">@recipe.Name</a></li>
            }
        </ul>
    </div>
    <div class="col-xs-12">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= Model.Total; i++)
                {

                    <li>
                        <a href="@Url.Action("Index",new { p = i})">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>